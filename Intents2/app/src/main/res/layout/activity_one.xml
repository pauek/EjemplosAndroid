<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityOne" >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

	    <TextView
	        android:id="@+id/textViewNom"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/introdueix_nom" />
	        
	    <EditText
	        android:id="@+id/editTextNom"
	        android:layout_width="130dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewNom"
	        android:layout_alignTop="@+id/textViewNom"
	        android:layout_marginLeft="17dp"
	        android:layout_toRightOf="@+id/textViewNom"
	        android:ems="10"
	        android:inputType="text" />
	
	    <Button
	        android:id="@+id/buttonSaluda"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textViewNom"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="19dp"
	        android:text="@string/textButtonSaluda" />
	        
	    </RelativeLayout>

</RelativeLayout>